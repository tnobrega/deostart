<div class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div class="col-sm-10">
      <div class="card">
        <div class="card-body">
          <p><h1>We have: <%= @leads.all.count %> leads</h1></p>
          <br>

          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Ip</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @leads.each do |lead| %>
                <tr>
                  <td><%= lead.name %></td>
                  <td><%= lead.email %></td>
                  <td><%= lead.ip %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>