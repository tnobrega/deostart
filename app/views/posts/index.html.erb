
<div class="card bg-dark text-white">
  <%= image_tag "banner-principal.png", width: '800px', height: '450px', class: "card-img"  %>
  <div class="card-img-overlay">

  </div>
</div>

<div class="container-fluid bg-grey">
  <div class="row font-grey">
    <div class="col-9 scroll">
      <div class="card-columns">
        <% @posts.each do |post| %>
          <%= link_to post do %>
            <div class="card">
              <img class="card-img-top" src="https://picsum.photos/242/120/?random">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= post.description %></p>
              </div>
              <div class="card-footer">
                <small class="text-muted"><%= post.keywords %></small>
                <% link_to 'Edit', edit_post_path(post) %>
                <% link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-3">
      
      <div class="card-deck exclusive-content">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Conteudo exclusivo:</h4>
            <ul>
              <li><%= link_to "Conteúdo 1", content_path %></li>
              <li><%= link_to "Conteúdo 2", content_path %></li>
              <li><%= link_to "Conteúdo 3", content_path %></li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>





</div>


<% link_to 'New Post', new_post_path %>
